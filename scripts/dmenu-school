#! /bin/bash

myDir='/home/'$USER'/Documents/school/'
options=$(cd ${myDir} && /bin/ls -d */)
arr=($options)

choice=$(echo -e "${options[@]}" | dmenu -i -p 'School: ' 2>/dev/null)
dir="$myDir""$choice"
#not used var
#Dir=$(/bin/ls -d "$dir" | sed 's/,//g')
bibdir="${dir}semester 2/bindercheck3/"

if [ "$choice" == "${arr[9]}" ]; then
  ranger "$bibdir" 2>/dev/null
else
  ranger "$dir" 2>/dev/null
fi
