#! /bin/bash

myDir='/home/'$USER'/Documents/school/'
options=$(cd ${myDir} && /bin/ls -d */ | cut -d " " -f1)
arr=($options)

choice=$(echo -e "${options[@]}" | dmenu -i -p 'School: ')

dir=${myDir}${choice}

if [ "$choice" == ${arr[2]} ]; then
  urxvt -e "ranger" $dir/semester\ 2/bindercheck3/
else
  urxvt -e "ranger" $dir
fi
