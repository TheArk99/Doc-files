#!/bin/sh
dwm="/home/noah/.config/dwm/"
dmenu="/home/noah/.config/dmenu/"
stat="/home/noah/.config/slstatus"
make="make clean install"

cd $dwm &&
  sudo $make || (echo "FAILED TO COMPILE DWM" && exit;)
cd $dmenu &&
  sudo $make || (echo "FAILED TO COMPILE DWM" && exit;)

cd $stat &&
  sudo $make || (echo "FAILED TO COMPILE DWM" && exit)
